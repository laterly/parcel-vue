/*公共css*/
/*重置浏览器固有的css*/
$textMainColor='#333';
$mainBodyColor="rgb(242, 242, 242)";
$inputPriColor='#999'
$inputAfterColor="#666"
$borderMainColor="#f5f5f5"
body,
html {
    font-size: 0.26rem;
    font-family: "Helvetica Neue", Helvetica, Arial, "Microsoft YaHei", "黑体", "宋体", Arial, sans-serif;
    color: $textMainColor;
    -webkit-text-size-adjust: none;
    padding: 0;
    margin: 0;
    background-color: $mainBodyColor;
}

article,
aside,
body,
dd,
dialog,
div,
dl,
dt,
footer,
h1,
h2,
h3,
h4,
h5,
h6,
header,
html,
input,
li,
nav,
ol,
p,
section,
textarea,
ul {
    margin: 0;
    padding: 0;
}

li,
ol,
ul {
    list-style-type: none
}
em{
    font-style: normal;
}
a {
    text-decoration: none;
    color:$textMainColor;
}

table {
    border-collapse: collapse;
    border-spacing: 0
}

textarea {
    resize: none;
    outline: 0
}

input,
button,
textarea {
    outline: 0;
    border: 0;
}

a:visited,
a:hover {
    text-decoration: none;
}

/* 禁止长按链接与图片弹出菜单 */

a,
img {
    -webkit-touch-callout: none;
}
/*去掉手持设备点击时出现的透明层*/

a,
button,
input {
    -webkit-tap-highlight-color: transparent;
    outline: none;
}
/* 搜索栏输入文字颜色*/
input{
  background-color:$inputPriColor;
  color:$inputAfterColor;
}

