/*重置浏览器固有的css结束*/

/*flex布局专用*/

.flex {
    display: flex;
}

.flex1 {
    flex: 1
}

.flex2 {
    flex: 2
}

.flex3 {
    flex: 3
}

.flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
}
.flex-left {
    display: flex;
    align-items: center;
    justify-content: left;
}
.flex-row {
    display: flex;
    flex-flow: row wrap;
}

.flex-column {
    display: flex;
    flex-flow: column wrap;
}

/*flex部分结束*/

/*左右对其部分*/

.text-left {
    text-align: left;
}

.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

/*左右对其部分结束*/

/*字体加粗*/

.font-weight {
    font-weight: bold;
}

/*字体加粗结束*/

/*display部分*/

.hidden {
    display: none;
}

.block {
    display: block !important;
}

.inline {
    display: inline;
}

.inline-block {
    display: inline-block;
}

/*display部分结束*/
/*图片自适应*/
.img-responsive{
    width: 100%;
    height: auto;
}
/*宽高区域*/

.height-percent-100 {
    height: 100%;
}

.width-percent-100 {
    width: 100%;
}

.height-vh-100 {
    height: 100vh;
}

/*宽高区域结束*/

/*浮动*/

.pull-left {
    float: left;
}

.pull-right {
    float: right;
}

/*浮动结束*/

/*清除浮动*/

.clearfix {
    *zoom: 1;
    clear: both;
    overflow: hidden;
}

.clearfix:after {
    display: block;
    height: 0;
    overflow: hidden;
    content: " ";
    visibility: hidden;
    clear: both;
}

/*清除浮动结束*/

/*绝对定位*/

.rel {
    position: relative;
}

.abs {
    position: absolute
}

.fix {
    position: fixed;
}

/*绝对定位结束*/

/*文字超出隐藏*/

.text-elli {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/*文字超出隐藏结束*/

/*超出样式*/

.over-hidden {
    overflow: hidden;
}

.over-scroll {
    overflow: scroll;
}

.over-auto {
    overflow: auto;
}

